@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Inventory>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}
<div class="card">
    <div class="card-header d-flex p-0">
        <ul class="nav nav-pills ml-auto p-2">
            @*<li class="nav-item"><a class="nav-link" href="#tab_info" data-toggle="tab">Info</a></li>*@
            <li class="nav-item"><a class="nav-link active" href="#tab_0" data-toggle="tab">Tags</a></li>
            <li class="nav-item"><a class="nav-link" href="#tab_1" data-toggle="tab">History</a></li>
            <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">Attachment</a></li>
        </ul>
    </div><!-- /.card-header -->
    <div class="card-body">
        <div class="tab-content">

            @*<div class="tab-pane active" id="tab_info">
                <strong><i class="fa fa-book mr-1"></i> Name</strong>

                <p class="text-muted editable text" id="Name" data-id="@Model.Content.Id">
                    @Umbraco.Field("inventoryName")
                </p>

                <hr>
                <strong><i class="fa fa-book mr-1"></i> Invoice</strong>

                <p class="text-muted editable text" id="Invoice" data-id="@Model.Content.Id">
                    @Umbraco.Field("inventoryInvoice")
                </p>

                <hr>

                <strong><i class="fa fa-book mr-1"></i> Cost</strong>

                <p class="text-muted editable text" id="Cost" data-id="@Model.Content.Id">
                    @Umbraco.Field("inventoryCost")
                </p>

                <hr>
            </div>*@
            <div class="tab-pane active" id="tab_0">
                <select id="inventory-select" data-id="tags" style="width:100%"></select>
                @{
                    int id = CurrentPage.Id;
                    var tags = String.Join(",", Umbraco.TagQuery.GetTagsForEntity(id).Select(x => x.Text));
                    @Html.Editor("temp", tags, new { htmlAttributes = new { @type = "hidden", @data_val = tags } });
                }



            </div>
            <div class="tab-pane" id="tab_1">
                <table id="history" class="table table-striped"></table>

            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="tab_2">

                <div id="attachments" data-id="@Model.Content.Id">
                    @{ Html.RenderPartial("~/Views/Partials/Attachment/_Attachment.cshtml"); }

                </div>


            </div>


        </div>
        <!-- /.tab-content -->
    </div><!-- /.card-body -->
</div>
<div class="row">
    <div class="col-md-6">

    </div>
    <div class="col-md-6">

    </div>
</div>
