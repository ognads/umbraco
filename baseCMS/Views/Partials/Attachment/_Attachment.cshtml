<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            <!-- Standar Form -->
            <h4>Select files from your computer<div id="output" class="container"></div></h4>
            <form action="/Umbraco/surface/attachmentsurface/create" method="post" enctype="multipart/form-data" id="js-upload-form">
                <div class="form-inline">
                    <div class="form-group">
                        <input type="file" name="files[]" id="js-upload-files" multiple>
                    </div>
                    <input type="hidden" id="parentId" name="parentId" />
                    <button type="submit" class="btn btn-sm btn-primary" id="filesSubmit">Upload files</button>
                </div>
            </form>
            <!-- Drop Zone -->
            <h4>Or drag and drop files below</h4>
            <p id="dropped_file_names"></p>

            <div class="upload-drop-zone" id="drop-zone">
                Drag & Drop, Size Limit : 6 MB, Supported file types: pdf, text, excel, csv, jpeg, png
            </div>
            <!-- Progress Bar -->
            <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;" id="progress_bar">
                        <span class="sr-only">0% Complete</span>
                    </div>
                </div>
            <!-- Upload Finished -->
            <div class="js-upload-finished">
                <h3></h3>
                <div class="list-group" id="existed_attachments">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Processed files</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover" id="attachments">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Version</th>
                                        <th>Created At</th>
                                        <th>Updated At</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="attachments_row">
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- /container -->
